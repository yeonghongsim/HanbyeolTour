<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 해당 파일에 모든 쿼리문을 작성 -->
<mapper namespace="adminMapper">
	<resultMap type="com.project.team.admin.vo.AreaVO" id="area">
		<id column="AREA_CODE" property="areaCode"/>
		<result column="AREA_ENG_NAME" property="areaEngName"/>
		<result column="AREA_KOR_NAME" property="areaKorName"/>
	</resultMap>
		
	<!-- 카테고리 관리 페이지 - 여행국가 카테고리 등록 -->
	<insert id="regArea">
		INSERT INTO HBT_TOUR_AREA (
			AREA_CODE
			, AREA_ENG_NAME
			, AREA_KOR_NAME
		) VALUES (
			#{areaCode}
			, #{areaEngName}
			, #{areaKorName}
		)
	</insert>
	
	<!-- 여행국가 카테고리 조회 -->
	<select id="getAreaCateList" resultMap="area">
		SELECT AREA_CODE
			, AREA_ENG_NAME
			, AREA_KOR_NAME
		FROM HBT_TOUR_AREA
	</select>
	
	<!-- 여행국가 카테고리 삭제-->
	<delete id="deleteAreaCate">
		DELETE HBT_TOUR_AREA
		WHERE AREA_CODE = #{areaCode}
	</delete>

</mapper>

























